import java.util.Scanner;
public class Main {
  public static void main(String[] args) {
  
 
	Scanner leia = new Scanner(System.in);
	float num1;

	
	System.out.print("digite um numero");
	num1 = leia.nextFloat();
	
	if (num1 < 0 ){
	    System.out.print("o numero " + num1 + " é negativo");
	}
	else if (num1 > 0){
	    System.out.print("o numero " + num1 + " é positivo");
	}
	else if (num1 == 0){
	    System.out.print("o numero é 0 ");
	}
	}
	}
	
